{
    "name": "힙합엘이 스티커 확장 프로그램",
    "description": "테스트",
    "version": "1.0.1",
    "manifest_version": 3,
    "icons" :{
      "16": "./img/icon-16.png",
      "32": "./img/icon-32.png",
      "48": "./img/icon-48.png",
      "128": "./img/icon-128.png"
    },
    "permissions": [
        "storage"
      ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "./popup/popup.html"
    },
    "content_scripts":[
      {
        "js": ["./injectContent/content.js"],
        "css": ["./injectContent/content.css"],
        "matches":[
          "https://hiphople.com/*"
        ]
      }
    ],
    "options_page": "./options/index.html"
  }
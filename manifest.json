{
    "name": "힙합엘이 스티커 확장 프로그램",
    "description": "테스트",
    "version": "1.0",
    "manifest_version": 3,
    "permissions": [
        "storage"
      ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "./popup/popup.html"
    },
    "content_scripts":[
      {
        "js": ["content.js"],
        "css": ["content.css"],
        "matches":[
          "https://hiphople.com/*"
        ]
      }
    ],
    "options_page": "./options/index.html"
  }